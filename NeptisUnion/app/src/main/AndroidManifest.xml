<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anna.neptis">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- PERMESSI UTILIZZATI PER CONFIGURARE GOOGLE MAPS -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".NeptisApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".PortalsMainActivity"
            android:label="Neptis">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CardInfoActivity" />
        <activity
            android:name=".TreasurePortalPag1"
            android:parentActivityName=".PortalsMainActivity" />
        <activity
            android:name=".TreasurePortalPag2"
            android:parentActivityName=".TreasurePortalPag1" />
        <activity
            android:name=".RegisterActivity"/>
        <activity
            android:name=".TravelPortalActivity"
            android:parentActivityName=".PortalsMainActivity" />
        <activity
            android:name=".MedalsActivity"
            android:parentActivityName=".TravelPortalActivity" />
        <activity
            android:name=".LoginDialogActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" />
        <activity android:name=".PuzzlePortal" />
        <activity android:name=".Achievements" />
        <activity android:name=".ShowPuzzle" />

        <activity android:name=".ManageCards" />

        <activity android:name=".TreasureInfoActivity" />


    </application>

</manifest>